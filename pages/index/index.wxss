.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}

.header .plus {
  width: 41rpx;
  height: 41rpx;

}

.header .new-todo {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.todos {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}

.todos .item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.todos .item:last-child {
  border-bottom: 0;
}

.todos .item .checkbox {
  margin-right: 20rpx;
}

.todos .item .name {
  flex: 1;
  font-size: 30rpx;
  color: #444;
}

.footer {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0;
  padding: 0 10rpx;
  font-size: 26rpx;
  color: #777;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty .title {
  font-size: 60rpx;
  margin: 200rpx 50rpx 50rpx;
  color: #444;
}

.empty .content {
  color: #666;
  text-align: center;
}